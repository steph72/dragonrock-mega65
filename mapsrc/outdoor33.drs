connectLabel mainRoad2: 13,2 - 24,2
connectLabel mainRoad3: 24,3 - 26,3
connectLabel mainRoad4: 26,4 - 31,4

$ msgMainRoad,"""
A wide and comfortable road.
"""

mainRoad1:
mainRoad2:
mainRoad3:
mainRoad4:
    NSTAT_O msgMainRoad
